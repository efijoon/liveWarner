</head>
<body>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.33.1/sweetalert2.all.js"></script>
	<%- include(viewPath('layouts/error-messages')) -%>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-t-90 p-b-30">
				<form class="login100-form validate-form" action="/auth/password/reset/:token" method="POST">

					<div class="wrap-input100 validate-input m-b-20" data-validate = "لطفا مقداری را وراد کنید">
						<span class="btn-show-pass">
							<i class="fa fa fa-eye"></i>
						</span>
						<input class="input100" type="password" name="pass" placeholder="رمزعبور خود را وارد کنید">
						<span class="focus-input100"></span>
					</div>

					<div class="wrap-input100 validate-input m-b-20" data-validate = "لطفا مقداری را وراد کنید">
						<span class="btn-show-pass">
							<i class="fa fa fa-eye"></i>
						</span>
						<input class="input100" type="password" name="confirmPass" placeholder="رمز عبور خود را تایید کنید">
						<span class="focus-input100"></span>
					</div>

					<input type="text" name="token" value="<%= req.params.token %>" style="display: none;">
					<input type="text" name="email" value="<%= req.query.e %>" style="display: none;">

					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							تغییر رمز عبور
						</button>
					</div>
					
					<div class="flex-col-c p-t-68">
						<span class="txt2 p-b-10"> 
							رمز خودتان را به یاد آوردید ... ؟
						</span>

						<a href="/auth/login" class="txt3 bo1 hov1">
							برگشت به صفحه ورود
						</a>
					</div>
					
				</form>
			</div>
		</div>
	</div>

<!--===============================================================================================-->
	<script src="/fg/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="/fg/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script src="/fg/vendor/bootstrap/js/popper.js"></script>
	<script src="/fg/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="/fg/vendor/select2/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="/fg/vendor/daterangepicker/moment.min.js"></script>
	<script src="/fg/vendor/daterangepicker/daterangepicker.js"></script>
<!--===============================================================================================-->
	<script src="/fg/vendor/countdowntime/countdowntime.js"></script>
<!--===============================================================================================-->
	<script src="/fg/js/main.js"></script>

</body>
</html>