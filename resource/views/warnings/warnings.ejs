<% 
function convertCompareField(value) { 
    switch (value) { 
        case '0' : 
            return 'آخرین قیمت' 
        case '1' :
            return 'درصد تغییر آخرین قیمت'
        case '2' : 
            return 'قیمت پایانی' 
        case '3' : 
            return 'درصد تغییر قیمت پایانی' 
        case '4' :
            return 'حجم معاملات' 
        case '5' : return 'ارزش معاملات'
    }
} 
function convertCompareFieldToEnglish(value) { 
    switch (value) { 
        case '0' : 
            return 'dealingPrice' 
        case '1' : 
            return 'dealingPricePercent' 
        case '2' : 
            return 'lastPrice'
        case '3' : 
            return 'lastPricePercent' 
        case '4' : 
            return 'hajmMoamelat' 
        case '5' : 
            return 'arzeshMoamelat' 
    }
}

function convertComparator(value) { 
    switch (value) { 
        case 'gt' : 
            return 'ب' 
        case 'gte' : 
            return 'ب م' 
        case 'lt' :
            return 'ک' 
        case 'lte' : 
            return 'ک م' 
        case 'e' : 
            return 'م' 
        } 
    } 
%>

